global-reset()

mobile = 700px
mini = 1000px
maxi = 1320px
maxcolumn = 400px

body
  font-family sans-serif
  font-weight 300
  padding 2%
  font-size 1.6rem
  line-height 1.3
  +below(mini)
    font-size 1.2rem

.card, .visualizer
  width 100%
  clearfix()

.card-about
  margin-right 2%

.card-about, .card-author
  width calc(33.3333% - 1.3333%)
  overflow hidden
  float left
  +below(mobile)
    stack()
    margin-bottom 2%
  +above(maxi)
    width "calc(50% - 2% - %s)" % (maxcolumn/2)

.card-picture
  float left
  width calc(33.3333% - 1.3333%)
  margin-right 2%
  +below(mobile)
    stack()
    display none
  +above(maxi)
    width maxcolumn

.card-author
  +below(mobile)
    padding-bottom 15px
    border-bottom 1px solid #aaa

.author-infos
  margin-bottom 1em
  max-width 300px
  +below(mini)
    max-width 250px
  +below(mobile)
    margin-bottom 2%

.card-picture img
  width 100%
  height auto


.visualizer
  margin-top 2%

.visualizer-font
  float left
  display inline-block
  width calc(66.6666% - 1%)
  padding-bottom 25px
  box-sizing border-box
  hyphens auto
  font-size 48px
  line-height 1.3
  +below(mobile)
    margin-top 15px
    stack()
  +above(maxi)
    width "calc(100% - 2% - %s)" % (maxcolumn)

.visualizer-list
  float left
  width calc(33.3333% - 1%)
  min-height 1px
  margin-right 2%
  +below(mobile)
    stack()
  +above(maxi)
    width maxcolumn

.visualizer-list ol
  list-style-type decimal-leading-zero
  list-style-position outside
  padding-left 2em
  +below(mobile)
    padding-top 5px
    padding-bottom 10px
    border-bottom 1px solid #aaa

.visualizer-list li
  padding-left 10px
  +below(mobile)
    margin-bottom 10px

.visualizer-resizer
  margin-top 20px
  +below(mobile)
    margin-bottom 50px

.visualizer-list ol.pinned
  position fixed
  top 0
  margin-top 2%
  left 2%

.visualizer-resizer.pinned
  position fixed
  bottom 0
  margin-bottom 2%
  left 2%

.visualizer-resizer.hidden
  display none

.resizer-value
  margin 0px 0.3rem

.resizer-button
  outline-color transparent
  outline-style none
  background transparent
  text-align center
  border 2px solid transparent
  font-size 1rem
  border-radius 60px
  width 30px
  height 30px
  padding 0 0 1px 1px
  vertical-align middle
  +below(mini)
    padding 0 0 2px 0
    border-width 1px
  +below(mobile)
    width 41px
    height 41px
    border 1px solid #888

.resizer-button:hover
  border-color black
  cursor pointer

.resizer-button:active
  color #888
  border-color #888

a
  border-sizing content-box
  color black
  text-decoration none

a:hover, .visualizer-list li .link--current
  position relative

a:hover, .visualizer-list li .link--current
  border-bottom 2px solid black
  +below(mini)
    border-bottom 1px solid black
